{% extends 'default_frame.twig' %}

{% set menus = ['setting', 'system', 'removehtml'] %}

{% block title %}システム設定{% endblock %}
{% block sub_title %}{{ subtitle }}{% endblock %}

{% block main %}
    <form id="form1" name="form1" method="post" action="{{ url('admin_setting_system_removehtml') }}">
        <div class="row">
            <div id="remove_html" class="col-md-12">
                <div id="remove_html_box" class="box">
                    <div id="remove_html_box__header" class="box-header">
                        <h3 class="box-title">{{ subtitle }}</h3>
                    </div><!-- /.box-header -->
                    <div id="remove_html_box__body" class="box-body">
                        <div id="remove_html_box__body_inner" class="form-inline form-group">
                            <div id="remove_html_box__confirm_button" class="form-group">
                                <button class="btn btn-primary btn-block" type="submit" name="mode" value="remove" {% if is_hidden_html %} disabled="disabled" {% endif %}>Remove HTML</button>
                            </div>
                            <div id="rollback_html_box__confirm_button" class="form-group">
                                <button class="btn btn-primary btn-block" type="submit" name="mode" value="rollback" {% if is_rollback == false %} disabled="disabled" {% endif %}>Rollback</button>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </form>
{% endblock %}
